<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppButton">
        <attr name="selector" format="color"></attr>
        <attr name="normal" format="color"></attr>
        <attr name="radioX" format="dimension"></attr>
        <attr name="radioY" format="dimension"></attr>
        <attr name="shadowColor" format="color"></attr>
        <attr name="shadowRadio" format="float"></attr>
    </declare-styleable>


    <declare-styleable name="ShadowRecyclerView">
        <attr name="radios" format="integer"></attr>
        <attr name="shadowsColor" format="color"></attr>
        <attr name="viewColor" format="color"></attr>
        <attr name="shadowsRadio" format="integer"></attr>
        <attr name="mShadowModel">
            <enum name="all" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>

</resources>